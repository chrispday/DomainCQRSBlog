<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
	<link rel="stylesheet" href="~/Content/bootstrap/bootstrap.min.css" />
	@RenderSection("Styles", false)
	@if (Request.IsAuthenticated)
 {
	<style>
		body
		{
			padding-top: 70px;
		}
	</style> 
 }

</head>
<body>
	<p />
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="jumbotron">
					<div class="container">
						<h1>Yeast Blog</h1>
						<p>CQRS + Event Sourcing + Domain Driven Design + Behaviour Driven Development</p>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-9">
				@RenderBody()
			</div>
			<div class="col-md-3">
				@RenderSection("Login", false)
			</div>
		</div>
	</div>
	@if (Request.IsAuthenticated)
 {
	 <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		 <form class="navbar-form navbar-right" method="post" action="/Login/Signout">
			 @Html.Hidden("ReturnUrl", Request.Url)
			 <button type="submit" class="btn btn-default">Signout</button>
		 </form>
	 </nav>
 }
	<script src="~/Scripts/jquery-2.0.3.js"></script>
	<script src="~/Scripts/bootstrap.js"></script>
	@RenderSection("Scripts", false)
</body>
</html>
