<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
	@RenderSection("Styles", false)
	@if (Request.IsAuthenticated)
 {
		<style>
			body
			{
				padding-top: 70px;
			}
		</style> 
 }

</head>
<body>
	<p />
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="jumbotron">
					<div class="container">
						<h1><a href="/">Yeast Blog</a></h1>
						<p>CQRS + Event Sourcing + Domain Driven Design + Behaviour Driven Development</p>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-9">
				@RenderBody()
			</div>
			<div class="col-md-3">
				@RenderSection("Login", false)
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<p />
				<small>(C) Copyright 2013 Chris Day</small>
			</div>
		</div>
	</div>
	@if (Request.IsAuthenticated)
 {
		<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
			<ul class="nav navbar-nav navbar-right">
				<li>
					<form class="navbar-form" method="get" action="/Login/Edit">
						@Html.Hidden("ReturnUrl", Request.Url)
						<button type="submit" class="btn btn-default">Change Password</button>
					</form>
				</li>
				<li>
					<form class="navbar-form" method="post" action="/Login/Signout">
						@Html.Hidden("ReturnUrl", Request.Url)
						<button type="submit" class="btn btn-default">Signout</button>
					</form>
				</li>
			</ul>
		</nav>
 }
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
	<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
	@RenderSection("Scripts", false)
</body>
</html>
