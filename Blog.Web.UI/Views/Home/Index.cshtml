@model IEnumerable<Blog.ReadModel.Data.PublishedPost>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_layout.cshtml";
}
<div class="row">
	<div class="col-md-9">
		@foreach (var post in Model)
  {
			<div class="row">
				<div class="col-md-12">
					<div class="page-header">
						<h3><a href="/Post/@post.Url">@post.Title</a></h3>
						<i class="icon-time"></i> @post.WhenPublished.ToString("dddd, dd" + Blog.Web.UI.Helper.TwoLetterSuffix(post.WhenPublished) + " MMMM yyyy")
					</div>
					<div>@Html.Raw(post.Content)</div>
				</div>
			</div>
  }
		<div class="row">
			<div class="col-md-12">
				<ul class="pager">
					@if (ViewBag.MorePosts)
	  {
						<li class="previous"><a href="/Posts/@(ViewBag.PageNumber + 1)">&larr; Older</a></li>
	  }
					@if (1 != ViewBag.PageNumber)
	  {
						<li class="next"><a href="@((2 == ViewBag.PageNumber) ? "/" : "/Posts/" + (ViewBag.PageNumber - 1))">Newer &rarr;</a></li>
	  }
				</ul>
			</div>
		</div>
	</div>
</div>
@section Scripts
{
	<script src="~/Scripts/syntaxhighlighter/scripts/shCore.js"></script>
	<script src="~/Scripts/syntaxhighlighter/scripts/shBrushCSharp.js"></script>
	<script>
		$(document).ready(function () {
			SyntaxHighlighter.all();
		});
	</script>
}
@section Styles
{
	<link rel="stylesheet" href="~/Scripts/syntaxhighlighter/styles/shCore.css">
	<link rel="stylesheet" href="~/Scripts/syntaxhighlighter/styles/shThemeDefault.css">
}